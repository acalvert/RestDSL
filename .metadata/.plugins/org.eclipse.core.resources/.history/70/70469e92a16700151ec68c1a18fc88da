package edu.auburn.oaccrefac.core.transformations;

import org.eclipse.cdt.core.dom.ast.IASTTranslationUnit;
import org.eclipse.core.runtime.IProgressMonitor;
import org.eclipse.jface.text.Region;
import org.eclipse.ltk.core.refactoring.RefactoringStatus;

public class SourceRegionCheck<T extends RefactoringParams> extends Check<T> {

    private final Region region;
    
    protected SourceRegionCheck(Region region) {
        this.region = region;
    }
    
    @Override
    public IASTTranslationUnit getTranslationUnit() {
        // TODO Auto-generated method stub
        return null;
    }
    
    protected void doRegionCheck(RefactoringStatus status) { }
    
    public RefactoringStatus regionCheck(RefactoringStatus status, IProgressMonitor pm) {
        doRegionCheck(status);
        return status;
    }
    
    @Override
    public RefactoringStatus performChecks(RefactoringStatus status, IProgressMonitor pm, T params) {
        super.performChecks(status, pm, params);
        if(status.hasFatalError()) {
            return status;
        }
        regionCheck(status, pm);
        if(status.hasFatalError()) {
            return status;
        }
        dependenceCheck(status, pm);
        return status;
    }

    public Region getRegion() {
        return region;
    }

}
