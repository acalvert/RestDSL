package edu.auburn.oaccrefac.core.transformations;

import org.eclipse.jface.text.Region;

public abstract class SourceRegionAlteration<T extends SourceRegionCheck<?>> extends SourceAlteration<T> {

    private Region region;
    
    public SourceRegionAlteration(IASTRewrite rewriter, T check) {
        super(rewriter, check);
        this.region = check.getRegion();
    }
    
    public Region getRegion() {
        return region;
    }

}
